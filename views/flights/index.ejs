<%- include('../partials/navbar') %>
<h1>All Flights</h1>
<ul>
  <% flights.forEach(flight => { %>
    <li>
      <%= flight.airline %> - <%= flight.flightNo %>
      Departing from <%= flight.airport %> on <%= flight.departs.toISOString().split('T')[0] %>
      <a href="/flights/<%= flight._id %>">Details</a>
    </li>
  <% }) %>
</ul>
<select name="airport" id="airport">
  <% ['AUS', 'DFW', 'DEN', 'LAX', 'SAN'].forEach(airport => { %>
    <% if (airport !== flight.airport && !flight.destinations.some(dest => dest.airport === airport)) { %>
      <option value="<%= airport %>"><%= airport %></option>
    <% } %>
  <% }) %>
</select>
<style>
body {
  font-family: Arial, sans-serif;
}

form {
  margin-bottom: 1em;
}

label {
  display: block;
  margin-top: 1em;
}
</style>