<%- include('../partials/navbar') %>
<h1>Add a New Flight</h1>
<form action="/flights" method="POST">
  <label for="airline">Airline:</label>
  <select name="airline" id="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
  </select>

  <form action="/tickets" method="post">
    <input type="hidden" name="flight" value="<%= flight._id %>">
    <label for="seat">Seat</label>
    <input type="text" id="seat" name="seat" required pattern="[A-F][1-9]\d?">
    <label for="price">Price</label>
    <input type="number" id="price" name="price" min="0" required>
    <button type="submit">Create Ticket</button>
  </form>

  <label for="airport">Airport:</label>
  <select name="airport" id="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN" selected>DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>

  <label for="flightNo">Flight Number:</label>
  <input type="number" id="flightNo" name="flightNo" min="10" max="9999" required>

  <label for="departs">Departure Date and Time:</label>
  <input type="datetime-local" id="departs" name="departs">

  <input type="submit" value="Add Flight">

  <input type="datetime-local" id="departs" name="departs" value="<%= departsDate %>">
</form>